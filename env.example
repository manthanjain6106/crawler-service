# Application Configuration
APP_NAME=Web Crawler Microservice
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_PREFIX=/api/v1

# CORS Configuration
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
ENABLE_PER_DOMAIN_RATE_LIMITING=true
DEFAULT_DOMAIN_RATE_LIMIT=10
DOMAIN_RATE_LIMIT_WINDOW=60
DOMAIN_SPECIFIC_LIMITS=

# Crawler Configuration
MAX_CONCURRENT_REQUESTS=30
CONCURRENCY_BURST_LIMIT=50
CONCURRENCY_GRADUAL_INCREASE=true
DEFAULT_TIMEOUT=30
MAX_DEPTH=10

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_BASE=1.0
RETRY_DELAY_MAX=10.0
RETRY_BACKOFF_MULTIPLIER=2.0
RETRY_ON_TIMEOUT=true
RETRY_ON_CONNECTION_ERROR=true

# Background Jobs
ENABLE_BACKGROUND_JOBS=true
MAX_WORKERS=2
JOB_TIMEOUT=3600

# Redis Configuration
REDIS_URL=redis://localhost:6379
USE_REDIS=false

# Storage Configuration
STORAGE_TYPE=json
STORAGE_DATA_DIR=data

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=crawler_service

# Elasticsearch Configuration
ELASTICSEARCH_HOSTS=localhost:9200
ELASTICSEARCH_CLOUD_ID=
ELASTICSEARCH_API_KEY=
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=crawler

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090